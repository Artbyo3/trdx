{
  "tracking_improvements": {
    "version": "0.7-beta-fixed",
    "description": "Optimized tracking configuration for stable VR body tracking",

    "enhanced_alignment": {
      "stability_factor": 0.15,
      "precision_factor": 0.85,
      "height_adaptation_speed": 0.01,
      "enable_body_anchoring": true,
      "max_headset_distance": 1.8,
      "outlier_rejection_threshold": 0.2,
      "smoothing_enabled": true,
      "controller_fusion_enabled": true
    },

    "body_constraints": {
      "hip_constraints": {
        "max_distance_from_headset": 1.0,
        "min_height_above_ground": 0.6,
        "max_height_above_ground": 1.3,
        "controller_influence_factor": 0.6
      },
      "foot_constraints": {
        "max_distance_from_headset": 1.8,
        "max_distance_from_hip": 1.2,
        "target_height_above_ground": 0.08,
        "max_height_variance": 0.2,
        "controller_influence_factor": 0.4
      }
    },

    "smoothing_settings": {
      "hip_smoothing_factor": 0.1,
      "foot_smoothing_factor": 0.2,
      "max_movement_per_frame": {
        "hip": 0.15,
        "foot": 0.25
      },
      "outlier_detection": {
        "enabled": true,
        "max_jump_distance": 0.5
      }
    },

    "controller_guidance": {
      "enabled": true,
      "hip_blend_factor": 0.6,
      "foot_blend_factor": 0.4,
      "min_controllers_required": 2,
      "hip_offset_below_controllers": 0.25,
      "foot_spread_factor": 0.3
    },

    "calibration": {
      "auto_calibration_enabled": true,
      "min_samples_for_calibration": 120,
      "max_calibration_samples": 240,
      "height_estimation_enabled": true,
      "recalibration_threshold": 0.3
    },

    "debugging": {
      "log_positioning_info": true,
      "log_interval_frames": 120,
      "detailed_constraint_logging": false,
      "performance_monitoring": false
    }
  }
}
